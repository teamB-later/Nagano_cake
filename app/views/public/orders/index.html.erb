<div calss="container">
  <div class="row">
    <div class="col">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order|%>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.post_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td>
               <% order.order_details.each do |order_detail| %>
                 <%= Item.find(order_detail.item_id).name %><br>
               <% end %>
              </td>
              <td><%= order.total_payment.to_s(:delimited) %>円</td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to "表示する", order_path(order), class: "btn btn-primary"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>