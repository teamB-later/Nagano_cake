<div class="container">
  <% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="row my-3">
    <div class="col-2">
      <h3 style="text-align:center; background-color: whitesmoke">配送先編集</h3>
    </div>
  </div>
    <%= form_with model: @address, url: address_path(@address), method: :patch do |form| %>
  <div class="row my-2">
    <div class="col-3">
      <%= form.label :post_code, '郵便番号(ハイフンなし)' %>
    </div>
    <div class="col-3">
      <%= form.text_field :post_code, class: 'form-control' %>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-3">
      <%= form.label :address, '住所' %>
    </div>
    <div class="col-5">
      <%= form.text_field :address, class: 'form-control' %>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-3">
      <%= form.label :name, '宛名' %>
    </div>
    <div class="col-3">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-4 d-flex justify-content-end">  <!--宛名の横に変更内容保存ボタン-->
      <%= form.submit '変更内容保存', class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>