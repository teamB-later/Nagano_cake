<div class="container">
  <div class="row">
    <div class="col my-3 ml-5">
      <h3>
        <span class="bg-secondary text-white ">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
        </span>
      </h3>
    </div>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="row">
    <div class="col-3 ml-5">
      <p>会員ID</p>
    </div>
    <div class="col">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 ml-5">
      <p>氏名</p>
    </div>
    <div class="col">
      <%= f.text_field :last_name %>      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 ml-5">
      <p>フリガナ</p>
    </div>
    <div class="col">
      <%= f.text_field :last_name_kana %>     <%= f.text_field :first_name_kana %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 ml-5">
      <p>郵便番号</p>
    </div>
    <div class="col">
      <%= f.text_field :post_code %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 ml-5">
      <p>住所</p>
    </div>
    <div class="col">
      <%= f.text_field :address, size: 50 %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 ml-5">
      <p>電話番号</p>
    </div>
    <div class="col">
      <%= f.text_field :telephone_number %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 ml-5">
      <p>メールアドレス</p>
    </div>
    <div class="col">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 ml-5">
      <p>会員ステータス</p>
    </div>
    <div class="col">
        <%= f.radio_button :is_active, :true %> <%= f.label :is_active, "有効", { value: :true } %>
        <%= f.radio_button :is_active, :false %> <%= f.label :is_active, "退会", { value: :false } %>
    </div>
  </div>
  <div class="row">
    <div class="col-3 ml-5"></div>
    <div class="col">
      <%= f.submit "変更を保存する", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>