<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card p-4 shadow" style="width: 400px; border-radius: 15px;">
    <div class="card-body">
      <h4 class="card-title text-center mb-4" style="color: black">管理者ログイン</h4>
      <!--エラーメッセージ-->
       <% if flash[:alert].present? %>
        <div class="alert alert-danger" style="border-radius: 10px;">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <% if flash[:notice].present? %>
        <div class="alert alert-success" style="border-radius: 10px;">
          <%= flash[:notice] %>
        </div>
      <% end %>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label for="email" style="color: black">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", placeholder: "例: example@example.com", style: "border-radius: 10px;" %>
        </div>
        <div class="form-group mt-3">
          <label for="password" style="color: black">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password", placeholder: "パスワードを入力", style: "border-radius: 10px;" %>
        </div>
        <div class="text-center mt-4">
          <%= f.submit "ログイン", class: "btn btn-primary", style: "border-radius: 10px;" %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>