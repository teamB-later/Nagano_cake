<div class="container">
  <div class="row py-5">
    <div class="col-4">
      <%= image_tag @item.get_item_image(300, 300) %>
    </div>
    <div class="col-6 ofset-1">
      <div class="row">
        <div class="col">
          <h3><strong><%= @item.name %></strong></h3>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row pt-5 pb-2">
        <div class="col">
          <h4><strong>￥<%= @item.price.to_s(:delimited) %></strong> <span style="font-size: 0.6em;">(税込)</span></h4>
        </div>
      </div>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post  do |f| %>
          <div class="row py-4">
            <div class="col-2">
              <%= f.select :amount, *[1..10] %>
              <%= f.hidden_field :item_id, :value => @item.id %>
            </div>
            <div class="col">
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      <p>
      </p>
    </div>
  </div>
</div>