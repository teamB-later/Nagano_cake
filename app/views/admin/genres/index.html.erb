<div class="container">
  <div class="row">
    <div class="col-3">
      <p>ジャンル一覧・追加</p>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
