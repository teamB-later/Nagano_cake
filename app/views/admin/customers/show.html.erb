<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-5 bg-secondary text-white "><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
      <div class="d-flex align-items-center">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td><%= @customer. customer_status %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-primary' %>
              <%= link_to "注文一覧を見る", admin_path, class: 'btn btn-primary' %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>