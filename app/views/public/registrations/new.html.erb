<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
    <div class="container">
      <div class="row mt-3">
        <div class="col-3">
          <h4>新規会員登録</h4>
        </div>
      </div>

      <div class="row pb-2">
        <div class="col-1 offset-1"><%= f.label :"名前" %></div>
        <div class="col-2 text-right p-0"><%= f.label :"(姓)" %></div>
        <div class="col-2"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"令和"  %></div>
        <div class="col-1 text-right p-0"><%= f.label :"(名)" %></div>
        <div class="col-2"><%= f.text_field :first_name, autocomplete: "first_name", placeholder:"道子"  %></div>
      </div>
      <div class="row pb-2">
        <div class="col-1 offset-1"><%= f.label :"フリガナ" %></div>
        <div class="col-2 text-right p-0"><%= f.label :"(セイ)" %></div>
        <div class="col-2"><%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder:"レイワ"  %></div>
        <div class="col-1 text-right p-0"><%= f.label :"(メイ)" %></div>
        <div class="col-2"><%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder:"ミチコ"  %></div>
      </div>

      <div class="row pb-2">
        <div class="col-3 offset-1">メールアドレス</div>
        <div class="col-3"><%= f.email_field :email, placeholder: "sample@example.com" %></div>
      </div>
      <div class="row pb-2">
        <div class="col-3 offset-1">郵便番号（ハイフンなし）</div>
        <div class="col-3"><%= f.text_field :post_code, placeholder:"0000000"  %></div>
      </div>

      <div class="row pb-2">
        <div class="col-3 offset-1">住所</div>
        <div class="col-5"><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", class: "form-control", size: 80  %></div>
      </div>

      <div class="row pb-2">
        <div class="col-3 offset-1">電話番号（ハイフンなし）</div>
        <div class="col-3"><%= f.text_field :telephone_number, placeholder:"0000000000", class: "form-control" %></div>
      </div>

       <div class="row pb-2">
        <div class="col-3 offset-1">パスワード（6文字以上）</div>
        <div class="col-3"><%= f.password_field :password, class: "form-control" %></div>
      </div>

      <div class="row pb-2">
        <div class="col-3 offset-1">パスワード（確認用）</div>
        <div class="col-3"><%= f.password_field :password_confirmation, class: "form-control" %></div>
      </div>

      <div class="row pb-2">
        <div class="col-3 offset-1"></div>
         <div class="col-3"><%= f.submit "新規登録" ,class: "btn btn-success"%></div>
      </div>

      <div class="row mt-3">
        <div class="col-3">
          <h4>既に登録済みの方</h4>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-5 ml-3">
          <%= render "public/shared/links" %>からログインしてください。
        </div>

      </div>
    </div>
<% end %>
