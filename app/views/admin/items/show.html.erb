<div class="container">
  <div class="row py-4">
    <div class="col-2 offset-3"><h4 style="text-align:center; background-color: whitesmoke">商品詳細</h4></div>
  </div>
</div>
<div class="container pl-5">
  <div class="row pt-5 pl-5">
    <div class="col-3 offset-2">
      <%= image_tag @item.get_item_image(200, 200) %>
    </div>
    <div class="col">
      <div class="row py-2">
        <div class="col-3">商品名</div>
        <div class="col-6"><%= @item.name %></div>
      </div>
      <div class="row py-2">
        <div class="col-3">商品説明</div>
        <div class="col-6"><%= @item.introduction %></div>
      </div>
      <div class="row py-2">
        <div class="col-3">ジャンル</div>
        <div class="col-6"><%= @item.genre.name %></div>
      </div>
      <div class="row py-2">
        <div class="col-3">
          <div class="row">
            <div class="col">税込価格</div>
          </div>
          <div class="row">
            <div class="col">(税抜価格)</div>
          </div>
        </div>
        <div class="col-6"><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</div>
      </div>
      <div class="row py-2">
        <div class="col-3">販売ステータス</div>
        <div class="col-6">
          <% if @item.is_active == true %>
            <div style="color: limegreen">
          <% else %>
            <div style="color: silver">
          <% end %>
          <strong><%= @item.item_status %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-start">
    <div class="col-2 offset-5"><%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %></div>
  </div>
</div>