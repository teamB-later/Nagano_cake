<div class="container">
  <%= form_with(model: @customer, url: { action: 'update' }) do |f| %>
    <div class="row-5 ml-4 mt-4">
      <div class="col-8">
        <h4>会員情報編集</h4>
      </div>
    </div>
    <div class="row mt-4 mb-2">
      <div class="col">
        <p>氏名</p>
      </div>
      <div class="col">
        <%= f.text_field :first_name, value: @customer.first_name %>
      </div>
      <div class="col">
        <%= f.text_field :last_name, value: @customer.last_name %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col">
        <p>フリガナ</p>
      </div>
      <div class="col">
        <%= f.text_field :first_name_kana, value: @customer.first_name_kana %>
      </div>
      <div class="col">
        <%= f.text_field :last_name_kana, value: @customer.last_name_kana %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-4">
        <p>郵便番号</p>
      </div>
      <div class="col-4">
        <%= f.text_field :post_code, value: @customer.post_code %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-4">
        <p>住所</p>
      </div>
      <div class="col-8">
        <%= f.text_field :address, value: @customer.address, size: 80 %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-4">
        <p>電話番号</p>
      </div>
      <div class="col-4">
        <%= f.text_field :telephone_number, value: @customer.telephone_number %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-4">
        <p>メールアドレス</p>
      </div>
      <div class="col-4">
        <%= f.text_field :email, value: @customer.email %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-4">
        <p></p>
      </div>
      <div class="col-4">
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
      </div>
      <div class="col-4">
        <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>
      </div>
    </div>
    
    
    
  <% end %>
</div>