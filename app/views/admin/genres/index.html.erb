<div class="container">
  <div class="row py-4">
    <div class="col-3">
      <h4 style="text-align:center; background-color: whitesmoke">ジャンル一覧・追加</4>
    </div>
  </div>
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="row py-3">
      <div class="col-2"><%= f.label :ジャンル名 %></div>
      <div class="col-3"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
      <div class="col-1"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>
  <div class="row py-4">
    <div class="col-4">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td style="text-align:center"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
